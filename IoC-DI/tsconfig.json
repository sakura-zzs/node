{
  "compilerOptions": {
    "sourceMap": true,
    "outDir": "dist",
    "strict": false,
    "lib": ["esnext","dom"],
    "esModuleInterop": true,
    // 开启装饰器和反射支持
    "experimentalDecorators": true,               
    "emitDecoratorMetadata": true,   
    // 增加nodejs的类型支持
    "types": ["reflect-metadata","node"],
    // 增加nodejs的模块解析支持，让ts可以识别nodejs的内置模块
    "moduleResolution": "node"
  }
}